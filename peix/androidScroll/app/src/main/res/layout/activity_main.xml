<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.freeworkshop.androidscroll.MainActivity">

    <LinearLayout
        android:id="@+id/ll_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Hello World 1     "
            android:maxLines="1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World 2     "
            android:maxLines="1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World 3     "
            android:maxLines="1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:text="Hello World 4     "
            android:maxLines="1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World 5     "
            android:maxLines="1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World 6     "
            android:maxLines="1" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_left"
        android:layout_below="@+id/ll_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="左滑"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/bt_tab"
        android:layout_below="@+id/bt_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TAB"
        android:onClick="onClick"/>
    <Button
        android:id="@+id/bt_tab2"
        android:layout_below="@+id/bt_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TAB2"
        android:onClick="onClick"/>
</RelativeLayout>
